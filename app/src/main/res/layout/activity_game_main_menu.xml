<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameMainMenu">

    <ImageView
        android:id="@+id/menuBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/forestbackground"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/menuCasePlaceholder"
        android:layout_width="240sp"
        android:layout_height="300sp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/menuBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/start_button"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/menuCasePlaceholder"
        app:layout_constraintStart_toStartOf="@+id/menuCasePlaceholder"
        app:layout_constraintTop_toTopOf="@+id/menuCasePlaceholder" />

</androidx.constraintlayout.widget.ConstraintLayout>